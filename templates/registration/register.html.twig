{% extends 'base.html.twig' %}

{% block title %}Création d'un compte client
{% endblock %}
{% block ariane %}
	{{parent() }}
	Gestion de profile
{% endblock %}
{% block lesboutons %}

	<a href="{{path('app_user_index')}}" title="Retour à la liste " class="btn btn-info btn-sm">
		<i class="fa fa-reply-all"></i>
		Rétour
	</a>
{% endblock %}
{% block hero %}{% endblock %}

{% block innerPage %}
	Création d'un compte
{% endblock %}

{% block body %}
	{{ form_start(registrationForm) }}
	<div class="row">
		<div class="col col-md-4">
			{{ form_row(registrationForm.client.identite.nom) }}
		</div>
		<div class="col col-md-4">
			{{ form_row(registrationForm.client.identite.postnom) }}
		</div>
		<div class="col col-md-4">
			{{ form_row(registrationForm.client.identite.prenom) }}
		</div>
		<div class="col col-md-4">
			{{ form_row(registrationForm.email) }}
		</div>
		<div class="col col-md-4">
			{{ form_row(registrationForm.password.first, {
            label: 'Mot de passe '
        }) }}
		</div>
		<div class="col col-md-4">
			{{ form_row(registrationForm.password.second, {
            label: 'Répéter le mot de passe '
        }) }}
		</div>
		<div class="col col-md-4">
			{{ form_row(registrationForm.client.adresse.telephone) }}
		</div>
		<div class="col col-md-4">
			{{ form_row(registrationForm.client.adresse.ville) }}
		</div>
		<div class="col col-md-4">
			{{ form_row(registrationForm.client.adresse.pays) }}
		</div>
		<div class="col col-md-8">
			{{ form_row(registrationForm.client.adresse.adresse) }}
		</div>
		<div class="col col-md-4">
			{{ form_row(registrationForm.client.zoneLivraisonPreferentielle) }}
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			&nbsp;
			<a class="btn bnt-link" data-toggle="modal" data-target="#myModal">Lire les conditions d'utilisation</a>
			<br/><br/>
		</div>
	</div>
	<div class="row">
		<div class="col col-md-6">
			{{ form_row(registrationForm.agreeTerms) }}
		</div>
		<div class="col col-md-6">
			<button type="submit" class="btn btn-default btn-primary pull-right">
				<span class="fa fa-user">
					Enregistrer
				</button>
			</div>
		</div>
		{{ form_end(registrationForm) }}

	</div>

</div>

<!-- Modal -->
<div class="modal fade modal-dark" id="myModal" role="dialog">
	<div
		class="modal-dialog">

		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Conditions d'inscriptions et utilisation</h4>
			</div>
			<div class="modal-body">
				<p>
