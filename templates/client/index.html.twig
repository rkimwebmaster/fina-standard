{% extends 'base.html.twig' %}

{% block title %}Client index
{% endblock %}

{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th>#</th>
				<th>Code Client</th>
				<th>Nom
				</th>
				<th>Postnom
				</th>
				<th>Prenom
				</th>
				<th>Email</th>
				<th>Achats
				</th>
				<th>actions</th>
			</tr>
		</thead>
		<tfoot>
			<tr>
				<th>#</th>
				<th>Code Client</th>
				<th>Nom
				</th>
				<th>Postnom
				</th>
				<th>Prenom
				</th>
				<th>Email</th>
				<th>Achats
				</th>
				<th>actions</th>
			</tr>
		</tfoot>
		<tbody>
			{% for client in clients %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>{{ client.codeClient }}</td>
					<td>{{ client.identite.nom }}</td>
					<td>{{ client.identite.postnom }}</td>
					<td>{{ client.identite.prenom }}</td>
					<td>{{ client.utilisateur.email }}</td>
					<td>{{ client.achats|length }}</td>
					<td>
						<div class="btn-group">
							<a class="btn btn-primary btn-sm " href="{{ path('app_client_show', {'id': client.id}) }}">
								<span class="fa fa-search-plus"></a>
								<a class="btn btn-secondary btn-sm" href="{{ path('app_client_edit', {'id': client.id}) }}">
									<span class="fa fa-edit"></a>
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="8">aucun enregistrement trouvé dans la base de donnée</td>
						</tr>
					{% endfor %}
				</tr>
			</tbody>
		</tbody>
	</table>
{% endblock %}
