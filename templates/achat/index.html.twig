{% extends 'base.html.twig' %}

{% block title %}Mes achats
{% endblock %}
{% block body %}
			<div class="row">
				<div class="col col-12">
					<table class="table">
						<thead>
							<tr>
								<th>#</th>
								<th>Date Achat</th>
								<th>Prix Total</th>
								<th>Frais expeditions</th>
								<th>Numéro Référence</th>
								<th>Etat</th>
								<th>Actions</th>
							</tr>
						</thead>
                        <tfoot>
							<tr>
								<th>#</th>
								<th>Date Achat</th>
								<th>Prix Total</th>
								<th>Frais expeditions</th>
								<th>Numéro Référence</th>
								<th>Etat</th>
								<th>Actions</th>
							</tr>
						</tfoot>
						<tbody>
							{% for achat in achats %}
								<tr>
									<td>{{ loop.index }}</td>
									<td>{{ achat.dateAchat ? achat.dateAchat|format_date('long') : '' }}</td>
									<td>{{ achat.prixTotal }}</td>
									<td>{{ achat.fraisExpedition }}</td>
									<td>{{ achat.id }}</td>
									<td><span class="badge badge-info">{{ achat.etat }} </span></td>
									<td>
										<a title="Visualiser la facture "  class="btn btn-sm btn-default" href="{{ path('app_achat_show', {'id': achat.id}) }}"><span class="fa fa-search-plus"></span></a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td class="text-warning" colspan="6">Vous n'avez pas encore effectuer des achats sur notre plateforme. </td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
{% endblock %}
